<% if flash[:errors] %>
<% flash[:errors].each do |e| %>
  <%= e %>
<br>
<% end %>
<% end %>

<%= form_for @mission do |f| %> 
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :scientist_id %>
  <%= f.collection_select :scientist_id, @scientists, :id, :name %>
  <%= f.label :planet_id %>
  <%= f.collection_select :planet_id, @planets, :id, :name %>
<%= f.submit %>
<% end %>